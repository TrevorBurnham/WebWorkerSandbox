@import 'nib'
@import 'normalize.css'

* { box-sizing: border-box } // http://paulirish.com/2012/box-sizing-border-box-ftw/

// Layout

html
  height: 100%

body
  height: 100%

header
  position: relative
  width: 100%
  padding: 10px
  border-bottom: 2px solid #111

  h1
    display: inline

  #run
    float: right
    font-size: 1.25em

.scriptPane
  position: relative
  float: left
  top: 0
  width: 50%
  height: 60%

  .editor
    font-size: 1em
    width: 100%
    height: 100%

#sandboxWrapper
  position: relative
  clear: both
  width: 100%
  border-top: 2px solid #111

// Styles

body
  background: #333
  color: #fff
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif

header, #sandboxWrapper
  font-family: 'Poiret One', sans-serif;

header a
  text-decoration: none
  color: hsl(60, 50%, 70%)

#run
  box-shadow:inset 0px 1px 0px 0px #caefab
  background: linear-gradient(top, #7d2, #5c1)
  border-radius: 4px
  border: 1px solid #268a16
  display: inline-block
  color: #240
  font-weight: bold
  padding: 6px 24px
  text-shadow: 1px 1px 0px #aade7c
  &:hover
    background: linear-gradient(top, #5c1, #7d2)
    color: #360

#sandbox
  font-size: 1.4em
  text-align: center

  p
    margin: 1em

  a
    color: hsl(220, 60%, 70%)
    &:hover
      text-decoration: none

  code
    font-size: 0.9em
    vertical-align: 1px

h2
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif
  font-size: 14px
  position: absolute
  top: 0
  right: 0
  margin: 0
  padding: 2px 4px 4px 4px
  border-radius: 0 0 0 4px
  background: #ddd
  color: #000
  z-index: 10

.scriptPane  h2
  border-right: 1px solid #333

// Ace overrides

.ace_scroller
  overflow-x: auto !important

.ace_sb
  overflow-y: auto !important